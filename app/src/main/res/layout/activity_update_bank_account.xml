<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".update_bank_account">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="420dp"
        android:layout_height="70dp"
        android:background="#3D5AFE"
        android:gravity="center"
        android:orientation="vertical"
        android:text="Update Bank Account"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#FBF9F9"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/updateBankName"
        android:layout_width="376dp"
        android:layout_height="52dp"
        android:ems="10"
        android:hint="Update Bank Name"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.542"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.237" />

    <EditText
        android:id="@+id/updateAccNo"
        android:layout_width="376dp"
        android:layout_height="52dp"
        android:ems="10"
        android:gravity="start|top"
        android:hint="Update Account Number"
        android:inputType="textMultiLine"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.542"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView3"
        app:layout_constraintVertical_bias="0.328" />

    <EditText
        android:id="@+id/updateBankBal"
        android:layout_width="376dp"
        android:layout_height="52dp"
        android:ems="10"
        android:gravity="start|top"
        android:hint="Update Available Balance"
        android:inputType="textMultiLine"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.542"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView3"
        app:layout_constraintVertical_bias="0.421" />

    <ImageView
        android:id="@+id/updateBankBtn"
        android:layout_width="73dp"
        android:layout_height="67dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.545"
        app:srcCompat="@drawable/plus" />

    <ImageView
        android:id="@+id/backBtnBnk"
        android:layout_width="47dp"
        android:layout_height="42dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="22dp"
        android:layout_marginEnd="348dp"
        android:layout_marginBottom="36dp"
        app:layout_constraintBottom_toTopOf="@+id/updateBankName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        app:srcCompat="@drawable/back" />


</androidx.constraintlayout.widget.ConstraintLayout>